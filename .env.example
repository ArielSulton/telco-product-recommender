# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# Environment
NODE_ENV=development
PYTHON_ENV=development

# ==============================================
# BACKEND CONFIGURATION
# ==============================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=telco_recommender
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@localhost:5432/telco_recommender

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=telco_recommender

# JWT Authentication
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# API URL
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=Telco Product Recommender
VITE_APP_VERSION=1.0.0

# ==============================================
# ML PIPELINE CONFIGURATION
# ==============================================

# Model Configuration
MODEL_VERSION=latest
MODEL_REGISTRY_PATH=models/
FEATURE_STORE_PATH=data/features/

# Training Configuration
BATCH_SIZE=1024
LEARNING_RATE=0.001
N_CLUSTERS=5
N_EPOCHS=10

# Recommendation Configuration
TOP_K_CANDIDATES=50
TOP_N_RECOMMENDATIONS=5
DIVERSITY_THRESHOLD=0.3

# ==============================================
# INFRASTRUCTURE CONFIGURATION
# ==============================================

# Docker Compose
COMPOSE_PROJECT_NAME=telco-recommender

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Airflow
AIRFLOW_HOME=/opt/airflow
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# ==============================================
# DEPLOYMENT CONFIGURATION (PRODUCTION)
# ==============================================

# Domain Configuration (for Dokploy/Traefik)
FRONTEND_DOMAIN=yourdomain.com
BACKEND_DOMAIN=api.yourdomain.com
MONITORING_DOMAIN=monitoring.yourdomain.com

# SSL Configuration (managed by Traefik/Let's Encrypt)
TRAEFIK_ACME_EMAIL=your-email@example.com

# Resource Limits
BACKEND_MEMORY_LIMIT=4G
BACKEND_CPU_LIMIT=2
FRONTEND_MEMORY_LIMIT=1G
FRONTEND_CPU_LIMIT=1
DATABASE_MEMORY_LIMIT=8G
DATABASE_CPU_LIMIT=4
REDIS_MEMORY_LIMIT=2G
REDIS_CPU_LIMIT=1

# ==============================================
# LOGGING & MONITORING
# ==============================================

# Log Level
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Optional - for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ==============================================
# TESTING CONFIGURATION
# ==============================================

# Test Database
TEST_DATABASE_URL=postgresql+asyncpg://postgres:test_password@localhost:5432/telco_recommender_test

# Test Configuration
PYTEST_WORKERS=4
COVERAGE_THRESHOLD=80
